  {
    "include": [
      "client/src/**/*",
      "server/**/*",
      "shared/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "build",
      "**/*.test.ts"
    ],
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["ESNext", "DOM", "DOM.Iterable"],
      "jsx": "preserve",

      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowImportingTsExtensions": true,
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "noEmit": true,

      "baseUrl": ".",
      "paths": {
        "@/*": ["client/src/*"],
        "@shared/*": ["shared/*"]
      },

      "types": ["node", "vite/client"]
    }
  }

